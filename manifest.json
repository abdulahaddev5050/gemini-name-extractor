{
  "manifest_version": 3,
  "name": "Gemini Client Extractor",
  "version": "2.0",
  "description": "Extracts client names, company names, and websites from job postings using Gemini AI. Batch process multiple files and export results as CSV.",
  "permissions": [
    "sidePanel",
    "storage",
    "scripting",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Gemini Client Extractor",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}